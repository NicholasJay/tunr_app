<h1> List of Artists </h1>
<button><a href="/artists/new">Add Artist</a></button>
<ul>
  <% @artist.each do |artist| %>
    <li><img src="<%= artist.photo_url %>" /></li>

    <li><a href="/artists/<%=artist.id%>/songs"><%= artist.name %></a></li>

    <li>
      <a href="/artists/<%=artist.id%>/edit"><button>Edit Artist</button></a>

      <form action="/artists/<%= artist.id%>" method="POST">
      <input type="hidden" name="_method" value="delete">
      <input name='authenticity_token' type='hidden' value='<%= form_authenticity_token %>' />

      <button>Delete</button>
      </form>

    </li>
    <br></br>
  <% end %>
</ul>
